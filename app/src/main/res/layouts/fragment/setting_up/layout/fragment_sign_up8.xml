<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingUpActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/text_view_setting_up_progress_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/questrial_regular"
        android:text="@string/setting_up_progress_number_count"
        android:textColor="#808080"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="25dp"
            app:srcCompat="@drawable/logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:text="@string/title_work_out_schedule"
            android:textColor="@color/textColorPrimary"
            android:textSize="30sp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/button_day_monday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_monday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/button_day_thursday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_thursday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/button_day_tuesday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_tuesday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/button_day_friday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_friday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/button_day_wednesday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_wednesday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/button_day_saturday"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="149dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_rounded_secondary"
                    android:button="@null"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="createTimePickerFragment"
                    android:text="@string/msg_day_saturday"
                    android:textAllCaps="true"
                    android:textColor="@drawable/radio_text_selected"
                    android:textSize="20sp" />

            </TableRow>

            <CheckBox
                android:id="@+id/button_day_sunday"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btn_rounded_secondary"
                android:button="@null"
                android:fontFamily="@font/questrial_regular"
                android:onClick="createTimePickerFragment"
                android:text="@string/msg_day_sunday"
                android:textAllCaps="true"
                android:textColor="@drawable/radio_text_selected"
                android:textSize="20sp" />
        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|end"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1"
            tools:ignore="UselessParent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_back"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/btn_rounded_primary"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="previousFragment"
                    android:text="@string/action_back"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/button_submit"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/btn_rounded_primary"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/textColorPrimary"
                    android:fontFamily="@font/questrial_regular"
                    android:onClick="sendToDB"
                    android:text="@string/action_submit"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="UnusedAttribute" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>