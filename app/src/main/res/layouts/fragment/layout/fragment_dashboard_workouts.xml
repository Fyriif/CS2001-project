<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="@string/title_filter_location"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="@string/title_filter_difficulty"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="@string/title_filter_bodygroup"
                    android:textAlignment="center"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="13sp" />


            </GridLayout>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingBottom="8dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_home"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_easy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_easy"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_whole"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_whole"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:paddingBottom="8dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_gym"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_gym"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_medium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_medium"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_upper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_upper"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_Park"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_park"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_hard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_hard"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_filter_lower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    card_view:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/questrial_regular"
                            android:paddingTop="4dp"
                            android:paddingEnd="2dp"
                            android:paddingBottom="4dp"
                            android:text="@string/filter_lower"
                            android:textAlignment="center"
                            android:textSize="13sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </GridLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_workout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="12dp"
        card_view:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/layout_workout_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_workout_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src=""
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp"
                    app:layout_constraintDimensionRatio="1:1" />
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/card_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/layout_workout_image"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/layout_workout_image"
                android:text="Close Grip Bench Press"
                android:textSize="18sp"
                android:fontFamily="@font/questrial_regular"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_location_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/card_view_rep_tag"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home - Gym - Park"
                    android:textSize="8sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_difficulty_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/card_view_location_tag"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/layout_workout_image"
                    android:text="Medium"
                    android:textSize="8sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_body_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/card_view_difficulty_tag"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whole Body"
                    android:textSize="8sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_weight_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/layout_workout_image"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="4dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10kg"
                    android:textSize="8sp"
                    android:fontFamily="@font/questrial_regular"
                    android:textColor="@color/textColorSecondary"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view_rep_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/card_view_weight_tag"
                card_view:cardCornerRadius="8dp"
                card_view:contentPadding="4dp"
                app:cardBackgroundColor="@color/colorPrimaryDark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 reps"
                    android:textSize="8sp"
                    android:fontFamily="@font/questrial_regular"
                    android:textColor="@color/textColorSecondary"/>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>