<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:ignore="UselessParent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_calories"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_calories"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="32sp" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_fat"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_fat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="28sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:ignore="UselessParent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_fibre"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_fibre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="32sp" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_protein"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_protein"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="28sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:ignore="UselessParent">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_saturated_fat"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_saturated_fat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="32sp" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_sodium"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_sodium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="28sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                tools:ignore="UselessParent">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_sugar"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_sugar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="32sp" />
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_column="1"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="6dp"
                            android:ems="10"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="@string/msg_carbs"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_carbs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/questrial_regular"
                            android:gravity="center"
                            android:text="@string/val"
                            android:textSize="28sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>