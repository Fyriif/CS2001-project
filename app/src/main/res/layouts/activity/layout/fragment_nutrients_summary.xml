<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DashboardActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/weekly_nutrients"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp"
                    android:fontFamily="@font/questrial_regular"
                    android:gravity="center_horizontal"
                    android:text="@string/weekly_nutrients_intake_title"
                    android:textSize="36sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:stretchColumns="0,1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/fat"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_fat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/fibre"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_fibre"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/protein"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_protein"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/saturated_fat"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_saturated_fat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/sodium"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_sodium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/sugar"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_sugar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:text="@string/carbs"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text_view_weekly_total_carbs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/rubik_regular"
                            android:gravity="center"
                            android:text="0g"
                            android:textSize="30sp" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>