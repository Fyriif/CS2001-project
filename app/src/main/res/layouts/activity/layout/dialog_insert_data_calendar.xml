<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/questrial_regular"
            android:textColor="#808080"
            android:text="@string/title_calendar_dialog"
            android:textSize="30sp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/edit_target_step"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_rounded_edit_text"
            android:drawablePadding="25dp"
            android:ems="15"
            android:fontFamily="@font/questrial_regular"
            android:hint="@string/enter_weight"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:layout_gravity="center" />
        <EditText
            android:id="@+id/edit_calories"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_rounded_edit_text"
            android:drawablePadding="25dp"
            android:ems="15"
            android:fontFamily="@font/questrial_regular"
            android:hint="@string/enter_calories"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/edit_hydration"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/btn_rounded_edit_text"
            android:drawablePadding="25dp"
            android:ems="15"
            android:fontFamily="@font/questrial_regular"
            android:hint="@string/enter_hydration"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#d8d8d8"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/btn_rounded_primary"
                android:fontFamily="@font/rubik_regular"
                android:text="@string/btn_confirm"
                android:textAllCaps="true"
                android:textColor="@color/textColorSecondary"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>