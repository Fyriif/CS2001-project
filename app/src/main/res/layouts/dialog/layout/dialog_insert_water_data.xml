<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="36dp"
    android:layout_marginRight="36dp"
    android:background="@drawable/bg_rounded_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_title_water_intake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/questrial_regular"
        android:gravity="center"
        android:text="@string/title_water_intake"
        android:textColor="@color/textColorPrimary"
        android:textSize="30sp"
        android:layout_marginTop="12dp"
        custom:layout_constraintTop_toTopOf="parent" />

    <com.brunel.group30.fitnessapp.Custom.CustomNumberPicker
        android:id="@+id/number_picker_water_daily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:descendantFocusability="blocksDescendants"
        android:theme="@style/NumberPickerStyle"
        custom:layout_constraintBottom_toTopOf="@+id/button_submit_daily_water_intake"
        custom:layout_constraintTop_toBottomOf="@+id/text_view_title_water_intake"
        custom:maxValue="2500"
        custom:minValue="250"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_submit_daily_water_intake"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/btn_rounded_primary"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/action_confirm"
        android:textAllCaps="true"
        android:textColor="@color/textColorSecondary"
        android:textSize="20sp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintHorizontal_bias="0.5"
        custom:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>